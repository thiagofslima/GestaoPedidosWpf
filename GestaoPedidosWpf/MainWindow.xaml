<Window x:Class="GestaoPedidosWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestaoPedidosWpf"
        xmlns:viewmodels="clr-namespace:GestaoPedidosWpf.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="960" WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="#EEE">
            <Button Content="Dashboard" Command="{Binding NavegarDashboardCommand}" Height="40"/>
            <Button Content="Pessoas" Command="{Binding NavegarPessoasCommand}" Height="40"/>
            <Button Content="Produtos" Command="{Binding NavegarProdutosCommand}" Height="40"/>
            <Button Content="Pedidos" Command="{Binding NavegarPedidosCommand}" Height="40"/>
        </StackPanel>

        <ContentControl Content="{Binding ConteudoAtual}" Grid.Column="1" />
    </Grid>
</Window>
