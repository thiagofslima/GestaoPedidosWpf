<UserControl x:Class="GestaoPedidosWpf.Views.ProdutoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestaoPedidosWpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Produtos}" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,108,0,85"/>
        <Button x:Name="btnAdicionar" Command="{Binding AdicionarProdutoCommand}" Content="Adicionar" HorizontalAlignment="Left" Margin="353,69,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
