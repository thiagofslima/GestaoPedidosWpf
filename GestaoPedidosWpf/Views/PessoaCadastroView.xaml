<Window x:Class="GestaoPedidosWpf.Views.PessoaCadastroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestaoPedidosWpf.Views"
        mc:Ignorable="d"
        Title="PessoaCadastroView" Height="260" Width="454" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="84,69,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Nome}" x:Name="txtNome" HorizontalAlignment="Left" Margin="84,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label Content="CPF:" HorizontalAlignment="Left" Margin="84,118,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding Cpf}" x:Name="txtCpf" HorizontalAlignment="Left" Margin="84,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250"/>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="84,69,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSalvar" Content="Salvar" Command="{Binding SalvarCommand}" HorizontalAlignment="Left" Margin="81,175,0,0" VerticalAlignment="Top" Click="btnSalvar_Click" Width="80"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="169,175,0,0" VerticalAlignment="Top" Click="btnCancelar_Click" Width="80"/>

    </Grid>
</Window>
